#!/bin/bash

VOLUME=$(amixer -c 0 get Master | grep Mono:)
LEVEL=$(echo $VOLUME | cut -d " " -f4 | sed 's/[^0-9]//g')
MUTE=$(echo $VOLUME | cut -d " " -f6)

if [ $MUTE == "[on]" ] ; then
  if [ $LEVEL -gt 50 ] ; then
    printf "ðŸ”Š "
  else
    printf "ðŸ”‰ "
  fi
else
  printf "ðŸ”ˆ "
fi

printf $LEVEL

